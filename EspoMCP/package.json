{
  "name": "espocrm-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for EspoCRM integration with comprehensive CRM operations",
  "main": "build/src/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && chmod +x build/src/index.js",
    "dev": "tsx src/index.ts",
    "start": "node build/src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:config": "node test-config.js",
    "test:client": "node test-client.js",
    "lint": "eslint src/**/*.ts",
    "docker:build": "docker build -t espocrm-mcp-server .",
    "docker:run": "docker run -p 3000:3000 --env-file .env espocrm-mcp-server"
  },
  "bin": {
    "espocrm-mcp-server": "./build/src/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "espocrm",
    "crm",
    "ai",
    "llm",
    "anthropic"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.2",
    "express": "^5.2.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
